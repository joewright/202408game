    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Game",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/jw_demo/app.py",
            "console": "integratedTerminal"
        },
        {
            "name": "Edit tiles",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/venv/bin/pyxel",
            "args": [
                "edit",
                "${workspaceFolder}/jw_demo/assets/characters"
            ],
            "console": "integratedTerminal"
        }
    ]
}